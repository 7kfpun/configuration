{
    "name": "base",
    "description": "Base Server Setup",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "default_attributes": {
        "users": ["kf"],
        "authorization": {
            "sudo": {
                "users": ["vagrant", "kf"],
                "passwordless": true
            }
        },
        "tz": "Asia/Hong_Kong"
    },
    "run_list": [
        "recipe[apt]",
        "recipe[sudo]",
        "recipe[build-essential]",
        "recipe[python]",
        "recipe[nginx]",
        "recipe[timezone]"
    ]
}
