{
    "name": "base",
    "description": "Base Server Setup",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "default_attributes": {
        "users": ["kf"],
        "authorization": {
            "sudo": {
                "users": ["vagrant", "kf"],
                "passwordless": true
            }
        },
        "locale": {
            "language": "en_US.UTF-8",
            "lang": "en_US.UTF-8",
            "lc_all": "en_US.UTF-8"
        },
        "tz": "Asia/Hong_Kong"
    },
    "run_list": [
        "recipe[apt]",
        "recipe[build-essential]",
        "recipe[curl]",
        "recipe[git]",
        "recipe[locale]",
        "recipe[nginx]",
        "recipe[python]",
        "recipe[sudo]",
        "recipe[supervisor]",
        "recipe[timezone]"
    ]
}
